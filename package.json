{
	"name": "casadeguara",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run db:start && npm run services:wait:database && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run db:start && concurrently -n vite,vitest --hide vite -k -s command-vitest \"npm run dev\" \"vitest -- --run\"",
		"posttest": "docker compose down --volumes",
		"services:wait:database": "node src/lib/scripts/wait-for-postgres.js",
		"db:start": "docker compose up -d",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit pull",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-vercel": "^6.2.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/async-retry": "^1.4.9",
		"@types/eslint": "^9.6.1",
		"@types/validator": "^13.15.10",
		"bulma": "^1.0.4",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.1",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"lucia": "^3.2.2",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"sass": "^1.94.2",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6",
		"vitest": "^4.0.15"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^7.1.0",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@types/qrcode": "^1.5.6",
		"argon2": "^0.44.0",
		"async-retry": "^1.3.3",
		"dayjs": "^1.11.19",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.0",
		"extenso": "^2.1.0",
		"postgres": "^3.4.7",
		"qrcode": "^1.5.4",
		"uuid": "^13.0.0",
		"validator": "^13.15.23",
		"vercel": "^49.1.1"
	}
}
